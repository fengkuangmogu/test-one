extends ./layout/layout.pug

block main
  .search.clearfix
    .inpt
      input(type="text", class="layui-input layui-input-inline", name="search", placeholder="请输入搜索关键字")
    button(class="layui-btn") 搜索
          
  .list
    h3 评论列表
    .user-list.layui-row
      .layui-col-md3.layui-show-md-inline-block 文章名称
      .layui-col-md3.layui-show-md-inline-block 评论内容
      .layui-col-md3.layui-show-md-inline-block 创建时间
      .layui-col-md3.layui-show-md-inline-block 操作
    ul.user-list
      if(commentList != undefined)
        each comment in commentList
          li(id=comment._id).layui-row
            .layui-col-md3.layui-show-md-inline-block=comment.article.title
            .layui-col-md3.layui-show-md-inline-block=comment.content
            .layui-col-md3.layui-show-md-inline-block=comment.created.toLocaleString()
            .layui-col-md3.layui-show-md-inline-block 
              button(class="layui-btn") 编辑
              button(class="layui-btn layui-btn-warm") 删除
    include layout/laypage.pug